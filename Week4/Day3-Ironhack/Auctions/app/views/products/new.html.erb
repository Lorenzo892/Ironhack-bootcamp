<%= form_for [@user, @products] do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title%>
  <br>
  <%= f.label :description%>
  <%= f.text_field :description%>
  <br>
  <%= f.label :minimum_bet%>
  <%= f.number_field :minimum_bet%>
  <br>
  <%= f.label :deadline%>
  <%= f.date_field :deadline%>

  <%= f.submit "save"%>

<%end%>
