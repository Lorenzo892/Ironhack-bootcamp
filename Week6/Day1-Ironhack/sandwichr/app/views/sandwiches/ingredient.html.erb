<h1>Ingredient of <%=@my_sandwich.name%></h1>
<ul>
<%@my_sandwich.ingredients.each do |ingredient|%>
  <li>
  <%= ingredient.name %>
  </li>
<% end%>

</ul>

<h2>Add an ingredient to this sandwich</h2>
<%@my_ingredients.each do |ingredient|%>
<button class= "<%=ingredient.id%>"> <%= ingredient.name%> </button>
<%end%>
